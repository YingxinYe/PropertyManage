<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".view.fragments.PropertyEmptyFragment">

    <ImageView
        android:id="@+id/empty_property_image"
        android:layout_centerInParent="true"
        android:src="@drawable/emptypropertylist"
        android:layout_width="match_parent"
        android:layout_height="300dp" />

    <Button
        android:id="@+id/empty_property_button"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/empty_property_image"
        android:textSize="20dp"
        android:textColor="@color/blue_icon"
        android:background="@color/background_light_blue"
        android:text="Add property now"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>